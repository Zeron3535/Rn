@model SiteSettings
@{
    ViewData["Title"] = "Site Ayarları";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Site Ayarları</h1>
        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i> Panele Dön
        </a>
    </div>

    <form asp-action="Settings" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h2 class="h5 mb-0">Genel Ayarlar</h2>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="SiteName" class="form-label">Site Adı</label>
                            <input asp-for="SiteName" class="form-control" required />
                            <span asp-validation-for="SiteName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SiteSlogan" class="form-label">Site Sloganı</label>
                            <textarea asp-for="SiteSlogan" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="SiteSlogan" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AboutContent" class="form-label">Hakkımızda İçeriği</label>
                            <textarea asp-for="AboutContent" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="AboutContent" class="text-danger"></span>
                            <small class="form-text text-muted">Hakkımızda sayfasında görüntülenecek içerik.</small>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h2 class="h5 mb-0">İletişim Bilgileri</h2>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Adres</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">E-posta Adresi</label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GoogleMapsUrl" class="form-label">Google Haritalar URL</label>
                            <input asp-for="GoogleMapsUrl" class="form-control" />
                            <span asp-validation-for="GoogleMapsUrl" class="text-danger"></span>
                            <small class="form-text text-muted">Google Haritalar'da konumunuzu paylaşmak için URL.</small>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h2 class="h5 mb-0">Sosyal Medya</h2>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="FacebookUrl" class="form-label">Facebook URL</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fab fa-facebook"></i></span>
                                <input asp-for="FacebookUrl" class="form-control" />
                            </div>
                            <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="InstagramUrl" class="form-label">Instagram URL</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fab fa-instagram"></i></span>
                                <input asp-for="InstagramUrl" class="form-control" />
                            </div>
                            <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="WhatsAppUrl" class="form-label">WhatsApp URL</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fab fa-whatsapp"></i></span>
                                <input asp-for="WhatsAppUrl" class="form-control" />
                            </div>
                            <span asp-validation-for="WhatsAppUrl" class="text-danger"></span>
                            <small class="form-text text-muted">Örnek: https://wa.me/905375890642</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h2 class="h5 mb-0">SEO Ayarları</h2>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="SeoMetaDescription" class="form-label">Meta Açıklaması</label>
                            <textarea asp-for="SeoMetaDescription" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="SeoMetaDescription" class="text-danger"></span>
                            <small class="form-text text-muted">Google arama sonuçlarında görünecek açıklama.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SeoMetaKeywords" class="form-label">Meta Anahtar Kelimeleri</label>
                            <textarea asp-for="SeoMetaKeywords" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="SeoMetaKeywords" class="text-danger"></span>
                            <small class="form-text text-muted">Virgülle ayrılmış anahtar kelimeler.</small>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h2 class="h5 mb-0">Telegram Ayarları</h2>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="TelegramApiKey" class="form-label">Telegram API Anahtarı</label>
                            <input asp-for="TelegramApiKey" class="form-control" />
                            <span asp-validation-for="TelegramApiKey" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TelegramChatId" class="form-label">Telegram Chat ID'leri</label>
                            <input asp-for="TelegramChatId" class="form-control" />
                            <span asp-validation-for="TelegramChatId" class="text-danger"></span>
                            <small class="form-text text-muted">Birden fazla ID eklemek için virgül ile ayırın. Örnek: @@tinafatma,7464909625</small>
                        </div>

                        <div class="mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">Telegram ID Nasıl Bulunur?</h6>
                                    <ol class="mb-0 ps-3">
                                        <li>Telegram'da <a href="https://t.me/userinfobot" target="_blank">@@userinfobot</a> ile konuşun</li>
                                        <li>Bot size ID'nizi verecektir</li>
                                        <li>Kanal/grup ID'si için <a href="https://t.me/username_to_id_bot" target="_blank">@@username_to_id_bot</a> kullanabilirsiniz</li>
                                    </ol>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <button type="button" id="testTelegramBtn" class="btn btn-outline-info w-100">
                                <i class="fab fa-telegram me-2"></i> Telegram Bağlantısını Test Et
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="h5 mb-0">Yönetici Ayarları</h2>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="AdminPassword" class="form-label">Yönetici Şifresi</label>
                            <input asp-for="AdminPassword" type="password" class="form-control" />
                            <span asp-validation-for="AdminPassword" class="text-danger"></span>
                            <small class="form-text text-muted">Yönetici paneline giriş için şifre. Değiştirmek istemiyorsanız boş bırakın.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4 text-end">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i> Ayarları Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Test Telegram button
            const testTelegramBtn = document.getElementById('testTelegramBtn');
            if (testTelegramBtn) {
                testTelegramBtn.addEventListener('click', function() {
                    const apiKey = document.getElementById('TelegramApiKey').value;
                    const chatId = document.getElementById('TelegramChatId').value;

                    if (!apiKey) {
                        alert('Lütfen önce Telegram API Anahtarı alanını doldurun.');
                        return;
                    }

                    if (!chatId) {
                        alert('Lütfen en az bir Telegram Chat ID ekleyin.');
                        return;
                    }

                    testTelegramBtn.disabled = true;
                    testTelegramBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Test Ediliyor...';

                    fetch('/Admin/TestTelegram', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify({ apiKey: apiKey, chatId: chatId })
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('HTTP Hata: ' + response.status);
                        }
                        return response.json();
                    })
                    .then(data => {
                        if (data.success) {
                            alert('Telegram bağlantısı başarılı! Test mesajı gönderildi.');
                        } else {
                            alert('Telegram bağlantısı başarısız: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Telegram test hatası:', error);
                        alert('Telegram bağlantısı test edilirken bir hata oluştu: ' + error);
                    })
                    .finally(() => {
                        testTelegramBtn.disabled = false;
                        testTelegramBtn.innerHTML = '<i class="fab fa-telegram me-2"></i> Telegram Bağlantısını Test Et';
                    });
                });
            }
        });
    </script>
}
